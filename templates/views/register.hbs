<!DOCTYPE html>
<html lang="en">
<head>
    {{>head}}
    <title>registration</title>
    <script src="https://kit.fontawesome.com/d2ea3cb570.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        {{>sideIndex}}
        <div class="user">
            <div class="user-login"> 
                <img src="/public/images/download.png" alt="">
                <h3>Create your Account</h3>
                <form action="/register" class="form-control" method="POST">
                    <div class="box">
                        <div class="box-content">
                            <label for="firstname" >First Name</label>
                            <input type="text" placeholder="Enter your first name" id="firstname" name="firstname" required>
                            <i class="fas fa-times-circle success" ></i>
                            <small></small>
                        </div>
                        <div class="box-content">
                            <label for="lastname">Last Name</label>
                            <input type="text" placeholder="Enter your last name" id="lastname" name="lastname" required >
                            <i class="fas fa-times-circle success" ></i>
                            <small></small>
                        </div>
                    </div>
                    <div class="box">
                        <div class="box-content">
                            <label for="email">Email</label>
                            <input type="email" placeholder="Enter your email id" id="email" name="email" required>
                            <i class="fas fa-times-circle success" ></i>
                            <small></small>
                        </div>
                        <div class="box-content">
                            <label for="mobile">Mobile</label>
                            <input type="text" placeholder="Enter your mobile number" id="mobile" name="mobile" required>
                            <i class="fas fa-times-circle success" ></i>
                            <small></small>
                        </div>
                    </div>
                    <div class="box">
                        <div class="box-content">
                            <label for="password">Password</label>
                            <input type="password" placeholder="Enter your password" id="password" name="password" required>
                            <i class="fas fa-times-circle success" ></i>
                            <small></small>
                        </div>
                        <div class="box-content" >
                            <label for="confpass">Confirm Password</label>
                            <input type="password" placeholder="Confirm your password" id="confpass" name="confpass" required>
                            <i class="fas fa-times-circle success" ></i>
                            <small></small>
                        </div>
                    </div>
                    <input type="submit" value="Register" class="register-1">
                    <span>already have an account <a href="/" style="margin: 0 .5rem; color:blue"> login </a> here</span>
                </form>
            </div>
        </div>
    </div>

    <script src="/public/js/register.js"></script>
</body>
</html>